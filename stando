-- Create the tool
local tool = Instance.new("Tool")
tool.RequiresHandle = false
tool.Name = ".autokill tool"

-- Function to send a chat message
local function sendChatMessage(message)
    local textChatService = game:GetService("TextChatService")
    local player = game.Players.LocalPlayer
    local speaker = textChatService:FindFirstChild("TextChannels"):FindFirstChild("RBXGeneral")

    if speaker then
        -- Send the message as the local player
        speaker:SendAsync(message)
    else
        warn("General chat channel not found!")
    end
end

-- Add functionality when the tool is activated
tool.Activated:Connect(function()
    local player = game.Players.LocalPlayer -- The player holding the tool
    local mouse = player:GetMouse() -- Get the player's mouse object

    -- Check if the mouse target is a player's character
    local target = mouse.Target
    if target then
        local targetParent = target.Parent
        local targetPlayer = game.Players:GetPlayerFromCharacter(targetParent)

        if targetPlayer then
            local message = ".Autokill " .. targetPlayer.Name -- The clicked player's username
            print(message)

            -- Send the message via TextChatService
            sendChatMessage(message)
        else
            sendChatMessage("No player detected!")
        end
    else
        sendChatMessage("No target selected!")
    end
end)

-- Add the tool to the player's backpack
tool.Parent = game.Players.LocalPlayer.Backpack

